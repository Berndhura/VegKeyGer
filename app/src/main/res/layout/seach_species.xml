<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:screenOrientation="portrait"
tools:context=".ProbabilisticKey">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/db1_root"
    android:background="@drawable/tema"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="vertical"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#DDDDDD"
            android:textAlignment="center"
            android:paddingHorizontal="20dp"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:text="@string/Search_title" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="37dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:inputType="textCapCharacters"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#331100" >
            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:paddingLeft="5dp"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="22dp"
            android:background="#DDDDDD"
            android:text=""
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewB"
            android:layout_width="fill_parent"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="15dp"
            android:background="#CCCCCC"
            android:text=""
            android:textStyle="bold|italic" />

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView"
            android:paddingHorizontal="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button2"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.7"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18dp"
            style="@style/Widget.AppCompat.Button"
            android:text="@string/Search_button1" />
        <Button
            android:id="@+id/button3"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18dp"
            style="@style/Widget.AppCompat.Button"
            android:text="@string/Search_button2" />
        <Button
            android:id="@+id/button1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18dp"
            style="@style/Widget.AppCompat.Button"
            android:text="@string/Search_button3" />

    </LinearLayout>

</LinearLayout>
</android.support.constraint.ConstraintLayout>